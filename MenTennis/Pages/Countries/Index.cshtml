@page
@model MenTennis.Pages.Countries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center myheading">View All Country</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Country</a>
</p>
<div class="row">
    @foreach (var item in Model.Country)
    {
        <div class="col-4">
            <div class="card mb-2">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.CountryName)</h4>
                </div>
                <div class="card-footer">
                    <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" class="btn btn-success" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" class="btn btn-warning" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>