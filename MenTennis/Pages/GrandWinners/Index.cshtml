@page
@model MenTennis.Pages.GrandWinners.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center myheading">View Grand Slam Winners</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add New Grand Slam Winner</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GrandWinner[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandWinner[0].Tournament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandWinner[0].WinnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandWinner[0].RunnerUp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GrandWinner) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tournament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RunnerUp)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" class="btn btn-success" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
