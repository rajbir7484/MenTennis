@page
@model MenTennis.Pages.MensRankings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center myheading">View Mens Ranking</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Add Mens Ranking</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MensRanking[0].PlayerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MensRanking[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MensRanking[0].Points)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MensRanking) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                <a asp-page="./Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" class="btn btn-success" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
