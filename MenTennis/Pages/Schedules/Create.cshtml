@page
@model MenTennis.Pages.Schedules.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center myheading">Add Tournament Schedule</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schedule.Tournament" class="control-label"></label>
                <input asp-for="Schedule.Tournament" class="form-control" />
                <span asp-validation-for="Schedule.Tournament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Dates" class="control-label"></label>
                <input asp-for="Schedule.Dates" class="form-control" />
                <span asp-validation-for="Schedule.Dates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.Host" class="control-label"></label>
                <input asp-for="Schedule.Host" class="form-control" />
                <span asp-validation-for="Schedule.Host" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.DefendingChampion" class="control-label"></label>
                <input asp-for="Schedule.DefendingChampion" class="form-control" />
                <span asp-validation-for="Schedule.DefendingChampion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.CountryId" class="control-label"></label>
                <select asp-for="Schedule.CountryId" class ="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">View Tournament Schedule</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
