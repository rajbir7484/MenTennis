@model MenTennis.Pages.Schedules.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<h1 class="text-center myheading">Are you sure you want to delete this?</h1>
<div>
    <h4>Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Tournament)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Tournament)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Dates)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Dates)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Host)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Host)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.DefendingChampion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.DefendingChampion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.Country.Id)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Schedule.Id" />
